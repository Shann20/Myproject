<body>
  <form id="dataForm">
    <h1>Test Calculator</h1>
    <label for="txtname">Student Name:</label>
    <input type="text" name="txtname" id="txtname" required>
    <label for="num1">Test Score:</label>
    <input type="number" name="num1" id="num1"required>
    <label for="num2">Test Item:</label>
    <input type="number" name="num2" id="num2"required>
    <button type="submit">Compute</button>
    <button type="reset">Cancel</button><br/>
    </form>
  <div class="table-responsive">
    <table id="dataTable">
      <thead>
        <h2 id="head"></h2>
      <tr>
        <th>No.</th>
        <th>Student Name</th>
        <th>Score</th>
        <th>Item</th>
        <th>Result</th>
        <th>Percentage</th>
        <th>Review</th>
      </tr>
      </thead>
      <tbody>
        
      </tbody>
    </table>
  </div>
  <script>
  const dataTable = document.getElementById('dataTable').getElementsByTagName('tbody')[0];
  const dataForm = document.getElementById('dataForm');
  let currentRowIndex = -1;
  dataForm.addEventListener('submit', function (event){
    event.preventDefault();
    const txtname = document.getElementById('txtname').value;
    const num1 = document.getElementById('num1').value;
    const num2 = document.getElementById('num2').value;
    document.getElementById('head').innerHTML = `<h2>${txtname}</h2>`;
    if(currentRowIndex === -1){
    const newRow = dataTable.insertRow();
    let result = num1 / num2 * 100;
    if (result >= 75) {
    var review = `<p style="color:green; opacity:75%;">PASSED</p>`;
    } else {
    var review = `<p style="color:red; opacity: 75%;">FAILED</p>`;
    }
    if (result >= 75) {
      result = `<p style="color: green; opacity: 75%;">${result}%</p>`;
    } else{
     result = `<p style="color: red; opacity: 75%;">${result}%</p>`;
    }

    newRow.innerHTML = `<td>${dataTable.rows.length}</td>
                        <td>${txtname}</td>
                        <td>${num1}</td>
                        <td>${num2}</td>
                        <td>${num1}/${num2}</td>
                        <td>${result}</td>
                        <td>${review}</td>`
    }
    
  });
  </script>
</body>
